---
interface ActionItem {
  id: number;
  severity: string;
  title: string;
  detail: string | null;
  current_state: string | null;
  target_state: string | null;
  status: string;
  metadata: string | null;
}

interface Props {
  items: ActionItem[];
  showDimension?: boolean;
}

const { items, showDimension = false } = Astro.props;

const severityBadge: Record<string, string> = {
  critical: 'bg-red-100 text-red-800',
  high: 'bg-orange-100 text-orange-800',
  medium: 'bg-amber-100 text-amber-800',
  low: 'bg-gray-100 text-gray-600',
};

const severityBorder: Record<string, string> = {
  critical: 'border-l-red-500',
  high: 'border-l-orange-500',
  medium: 'border-l-amber-500',
  low: 'border-l-gray-300',
};

function parseMetadata(raw: string | null): Record<string, any> | null {
  if (!raw) return null;
  try {
    return JSON.parse(raw);
  } catch {
    return null;
  }
}
---

{items.length === 0 ? (
  <p class="text-xs text-gray-400 italic">No action items.</p>
) : (
  <div class="flex flex-col gap-3">
    {items.map((item) => {
      const isCompleted = item.status === 'completed';
      const meta = parseMetadata(item.metadata);
      const badge = severityBadge[item.severity] || severityBadge.low;
      const border = severityBorder[item.severity] || severityBorder.low;

      return (
        <div class={`border-l-4 rounded-r-lg p-3 sm:p-4 bg-white ${border} ${isCompleted ? 'opacity-60' : ''}`}>
          {/* Header row: severity badge + title + status */}
          <div class="flex items-start justify-between gap-2">
            <div class="flex items-center gap-2 flex-1 min-w-0">
              <span class={`inline-flex items-center px-1.5 py-0.5 rounded text-xs font-medium flex-shrink-0 ${badge}`}>
                {item.severity}
              </span>
              <span class={`text-sm font-medium ${isCompleted ? 'text-gray-400 line-through' : 'text-gray-900'}`}>
                {item.title}
              </span>
            </div>
            <span class="flex-shrink-0 mt-0.5">
              {isCompleted ? (
                <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              ) : (
                <svg class="w-5 h-5 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <circle cx="12" cy="12" r="9" stroke-width="2" />
                </svg>
              )}
            </span>
          </div>

          {/* Detail text */}
          {item.detail && (
            <p class={`text-xs mt-1.5 ${isCompleted ? 'text-gray-400' : 'text-gray-600'}`}>
              {item.detail}
            </p>
          )}

          {/* Current / Target states */}
          {(item.current_state || item.target_state) && (
            <div class={`mt-2 text-xs space-y-1 ${isCompleted ? 'text-gray-400' : 'text-gray-500'}`}>
              {item.current_state && (
                <p>
                  <span class="font-medium">Current:</span> {item.current_state}
                </p>
              )}
              {item.target_state && (
                <p>
                  <span class="font-medium">Target:</span> {item.target_state}
                </p>
              )}
            </div>
          )}

          {/* Metadata display */}
          {meta && (
            <div class={`mt-2 text-xs ${isCompleted ? 'text-gray-400' : 'text-gray-400'}`}>
              {meta.sourceTitle && (
                <p>Post: {meta.sourceTitle}</p>
              )}
              {meta.sourceUrl && !meta.sourceTitle && (
                <p>Source: {meta.sourceUrl}</p>
              )}
              {showDimension && meta.dimension_name && (
                <p>Dimension: {meta.dimension_name}</p>
              )}
            </div>
          )}
        </div>
      );
    })}
  </div>
)}
