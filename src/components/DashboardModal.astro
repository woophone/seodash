---
export interface Props {
  id: string;
  title: string;
  subtitle?: string;
  adminOnly?: boolean;
}

const { id, title, subtitle, adminOnly = false } = Astro.props;
---

<div id={`modal-${id}`} class="hidden fixed inset-0 z-50">
  <div class="absolute inset-0 bg-black/50" data-close-modal></div>
  <div class="absolute inset-2 sm:inset-4 md:inset-auto md:top-1/2 md:left-1/2 md:-translate-x-1/2 md:-translate-y-1/2 md:w-full md:max-w-4xl bg-white rounded-xl shadow-2xl flex flex-col max-h-[calc(100vh-1rem)] sm:max-h-[calc(100vh-2rem)] md:max-h-[90vh]">
    {adminOnly && (
      <div class="bg-slate-700 text-slate-200 px-6 py-1.5 text-xs font-medium flex items-center gap-1.5 rounded-t-xl">
        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
        </svg>
        Viewable by admin only â€” this content is not visible to the client
      </div>
    )}
    <div class:list={["px-6 py-4 border-b border-gray-200 flex items-center justify-between flex-shrink-0", !adminOnly && 'rounded-t-xl']}>
      <div class="min-w-0">
        <h3 class="text-lg font-semibold text-gray-900">{title}</h3>
        {subtitle && <p class="text-sm text-gray-500">{subtitle}</p>}
      </div>
      <button data-close-modal class="text-gray-400 hover:text-gray-600 text-2xl leading-none ml-4 flex-shrink-0">&times;</button>
    </div>
    <div class="p-6 overflow-y-auto flex-1">
      <slot />
    </div>
  </div>
</div>
