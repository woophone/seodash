---
import Layout from '../../../../../layouts/Layout.astro';
import {
  getClient,
  getClientPages,
  getPageAuditCards,
  getPageActionItems,
} from '../../../../../lib/db.js';

export function getStaticPaths() {
  const pages = getClientPages('cs');
  return pages.map(p => {
    const path = new URL(p.page_url).pathname.replace(/^\/|\/$/g, '');
    const slug = path.replace(/\//g, '-') || 'homepage';
    return {
      params: { slug },
      props: { pageUrl: p.page_url },
    };
  });
}

const { slug } = Astro.params;
const { pageUrl } = Astro.props;
const client = getClient('cs');

// Derive page name from URL
const urlPath = new URL(pageUrl).pathname;
const pageName = urlPath === '/' ? 'Homepage' :
  urlPath.replace(/^\/|\/$/g, '').split('/').pop()?.replace(/-/g, ' ')
    .replace(/\b\w/g, (c: string) => c.toUpperCase()) || urlPath;

// Get all audit cards (dimensions with their status)
const auditCards = getPageAuditCards('cs', pageUrl);

// Get all action items for this page
const allItems = getPageActionItems('cs', pageUrl);

// Group action items by dimension
const itemsByDimension = {};
for (const item of allItems) {
  if (!itemsByDimension[item.dimension_id]) {
    itemsByDimension[item.dimension_id] = [];
  }
  itemsByDimension[item.dimension_id].push(item);
}

// Determine remedy status for each dimension
function getRemedyStatus(card) {
  if (card.category === 'placeholder') return 'placeholder';
  if (!card.audit_status) return 'not-audited';

  const items = itemsByDimension[card.dimension_id] || [];
  if (items.length === 0) {
    // Audited, no action items. Check score to determine if clean or pending Phase 2
    if (card.score !== null && card.score >= 70) return 'clean';
    return 'pending'; // Audited with issues but no remedy planned yet
  }

  const pendingItems = items.filter(i => i.status === 'pending');
  const completedItems = items.filter(i => i.status === 'completed');

  if (pendingItems.length === 0 && completedItems.length > 0) return 'complete';
  if (pendingItems.length > 0) return 'planned';
  return 'pending';
}

// Status badge config
const statusConfig = {
  'clean': { label: 'Clean', bg: 'bg-green-100', text: 'text-green-800' },
  'pending': { label: 'Pending', bg: 'bg-gray-100', text: 'text-gray-600' },
  'planned': { label: 'Planned', bg: 'bg-blue-100', text: 'text-blue-800' },
  'complete': { label: 'Complete', bg: 'bg-green-100', text: 'text-green-800' },
  'not-audited': { label: 'Not Audited', bg: 'bg-gray-100', text: 'text-gray-400' },
  'placeholder': { label: 'Placeholder', bg: 'bg-purple-100', text: 'text-purple-800' },
};

// Group dimensions by tier
const tiers = new Map();
for (const card of auditCards) {
  if (!tiers.has(card.tier)) tiers.set(card.tier, []);
  tiers.get(card.tier)!.push(card);
}

// Counts
const totalDimensions = auditCards.filter(c => c.category !== 'placeholder').length;
const cleanCount = auditCards.filter(c => getRemedyStatus(c) === 'clean').length;
const pendingCount = auditCards.filter(c => getRemedyStatus(c) === 'pending').length;
const plannedCount = auditCards.filter(c => getRemedyStatus(c) === 'planned').length;
const completeCount = auditCards.filter(c => getRemedyStatus(c) === 'complete').length;
const totalActionItems = allItems.length;
const pendingActions = allItems.filter(i => i.status === 'pending').length;
const completedActions = allItems.filter(i => i.status === 'completed').length;

// Severity config
const severityConfig = {
  'critical': { bg: 'bg-red-100', text: 'text-red-800', label: 'Critical' },
  'high': { bg: 'bg-orange-100', text: 'text-orange-800', label: 'High' },
  'medium': { bg: 'bg-amber-100', text: 'text-amber-800', label: 'Medium' },
  'low': { bg: 'bg-gray-100', text: 'text-gray-600', label: 'Low' },
};

// Score color
function scoreColor(s) {
  if (s === null) return 'text-gray-400';
  if (s >= 70) return 'text-green-700';
  if (s >= 40) return 'text-amber-700';
  return 'text-red-700';
}
---

<Layout title={`Remedy — ${pageName} | ${client?.name || 'Client'}`}>
  <!-- Entire page is admin-only -->
  <div class="admin-only hidden">
    <div class="max-w-5xl mx-auto px-4 py-6">
      <!-- Header -->
      <div class="mb-6">
        <a href={`/v2/cs/pages/${slug}/`} class="text-sm text-blue-600 hover:text-blue-800 mb-2 inline-block">&larr; Back to page report</a>
        <h1 class="text-2xl font-bold text-gray-900">Remedy Plan</h1>
        <p class="text-gray-600 mt-1">{pageName}</p>
        <p class="text-xs text-gray-400 mt-1 font-mono">{urlPath}</p>
      </div>

      <!-- Summary bar -->
      <div class="grid grid-cols-2 sm:grid-cols-4 gap-3 mb-6">
        <div class="bg-white rounded-lg shadow-sm p-3 text-center">
          <div class="text-2xl font-bold text-green-700">{cleanCount}</div>
          <div class="text-xs text-gray-500">Clean</div>
        </div>
        <div class="bg-white rounded-lg shadow-sm p-3 text-center">
          <div class="text-2xl font-bold text-gray-500">{pendingCount}</div>
          <div class="text-xs text-gray-500">Pending</div>
        </div>
        <div class="bg-white rounded-lg shadow-sm p-3 text-center">
          <div class="text-2xl font-bold text-blue-700">{plannedCount}</div>
          <div class="text-xs text-gray-500">Planned</div>
        </div>
        <div class="bg-white rounded-lg shadow-sm p-3 text-center">
          <div class="text-2xl font-bold text-green-700">{completeCount}</div>
          <div class="text-xs text-gray-500">Complete</div>
        </div>
      </div>

      {totalActionItems > 0 && (
        <div class="bg-white rounded-lg shadow-sm p-3 mb-6 flex items-center gap-4 text-sm">
          <span class="font-medium text-gray-700">Action Items:</span>
          <span class="text-blue-700">{pendingActions} pending</span>
          <span class="text-green-700">{completedActions} completed</span>
          <span class="text-gray-400">of {totalActionItems} total</span>
        </div>
      )}

      <!-- Dimensions by tier -->
      {[...tiers.entries()].map(([tier, cards]) => {
        const tierLabels = {
          1: 'Tier 1 — Foundation',
          2: 'Tier 2 — High-Impact On-Page',
          3: 'Tier 3 — Technical Performance',
          4: 'Tier 4 — Content Enrichment',
          5: 'Tier 5 — Topical Authority & Stability',
          6: 'Tier 6 — Advanced (Placeholder)',
        };
        return (
          <div class="mb-6">
            <h2 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-3">{tierLabels[tier] || `Tier ${tier}`}</h2>

            {cards.map(card => {
              const status = getRemedyStatus(card);
              const badge = statusConfig[status];
              const items = itemsByDimension[card.dimension_id] || [];
              const pending = items.filter(i => i.status === 'pending');
              const completed = items.filter(i => i.status === 'completed');

              return (
                <div class="bg-white rounded-lg shadow-sm mb-3 overflow-hidden">
                  {/* Dimension header row */}
                  <div class="flex items-center justify-between p-4">
                    <div class="flex items-center gap-3">
                      {card.score !== null && (
                        <span class={`text-sm font-bold ${scoreColor(card.score)}`}>{card.score}</span>
                      )}
                      <h3 class="text-sm font-semibold text-gray-900">{card.name}</h3>
                    </div>
                    <span class={`inline-flex items-center gap-1 px-2 py-0.5 rounded-full text-xs font-medium ${badge.bg} ${badge.text}`}>
                      {status === 'complete' && (
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7" />
                        </svg>
                      )}
                      {badge.label}{items.length > 0 ? ` (${items.length})` : ''}
                    </span>
                  </div>

                  {/* Finding summary from Phase 1 */}
                  {card.summary && (
                    <div class="px-4 pb-2">
                      <p class="text-xs text-gray-500">{card.summary}</p>
                    </div>
                  )}

                  {/* Action items table */}
                  {items.length > 0 && (
                    <div class="border-t border-gray-100">
                      <table class="w-full text-xs">
                        <thead>
                          <tr class="bg-gray-50">
                            <th class="text-left px-4 py-2 font-medium text-gray-500">Action</th>
                            <th class="text-left px-4 py-2 font-medium text-gray-500 w-20">Severity</th>
                            <th class="text-left px-4 py-2 font-medium text-gray-500 w-20">Status</th>
                          </tr>
                        </thead>
                        <tbody>
                          {items.map(item => {
                            const sev = severityConfig[item.severity] || severityConfig.medium;
                            return (
                              <tr class="border-t border-gray-50 hover:bg-gray-50">
                                <td class="px-4 py-2">
                                  <div class="font-medium text-gray-800">{item.title}</div>
                                  {item.detail && <div class="text-gray-400 mt-0.5">{item.detail}</div>}
                                  {item.current_state && item.target_state && (
                                    <div class="mt-1 text-gray-400">
                                      <span class="text-red-400">{item.current_state}</span>
                                      <span class="mx-1">&rarr;</span>
                                      <span class="text-green-500">{item.target_state}</span>
                                    </div>
                                  )}
                                </td>
                                <td class="px-4 py-2">
                                  <span class={`px-1.5 py-0.5 rounded text-xs font-medium ${sev.bg} ${sev.text}`}>{sev.label}</span>
                                </td>
                                <td class="px-4 py-2">
                                  {item.status === 'completed' ? (
                                    <span class="text-green-600 font-medium flex items-center gap-1">
                                      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7" />
                                      </svg>
                                      Done
                                    </span>
                                  ) : (
                                    <span class="text-gray-400">Pending</span>
                                  )}
                                </td>
                              </tr>
                            );
                          })}
                        </tbody>
                      </table>
                    </div>
                  )}

                  {/* Pending state: no items yet */}
                  {status === 'pending' && card.audit_status === 'audited' && (
                    <div class="px-4 pb-3">
                      <p class="text-xs text-gray-400 italic">Phase 2 not yet run — remedy planning needed</p>
                    </div>
                  )}
                </div>
              );
            })}
          </div>
        );
      })}
    </div>
  </div>

  <!-- Non-admin message -->
  <div class="admin-gate max-w-xl mx-auto px-4 py-20 text-center">
    <h1 class="text-xl font-bold text-gray-400">Access Restricted</h1>
    <p class="text-gray-400 mt-2 text-sm">This page is for internal use only.</p>
  </div>
</Layout>

<style>
  .admin-gate {
    display: block;
  }
  :global(.admin-only:not(.hidden)) ~ .admin-gate {
    display: none;
  }
</style>
