                  <svg class="w-4 h-4 text-gray-400 toggle-arrow transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                  </svg>
                </div>
              </div>
            </button>

            <!-- Expanded keyword detail -->
            <div id={`pg-${page.idx}`} class="hidden border-t border-gray-100 bg-gray-50">
              <div class="px-4 sm:px-6 py-4">
                {page.isAudited && page.reportSlug && (
                  <a href={`/cs/pages/${page.reportSlug}/`} class="flex items-center justify-between p-4 mb-4 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors group">
                    <div>
                      <p class="font-semibold">View Detailed Report</p>
                      <p class="text-sm text-blue-200">Full audit with keyword analysis, SERP landscape, content review, and recommendations</p>
                    </div>
                    <svg class="w-5 h-5 flex-shrink-0 ml-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                    </svg>
                  </a>
                )}
                {page.workLogSlug && (
                  <a href={`/cs/pages/${page.workLogSlug}/work-log/`} class="admin-only hidden flex items-center justify-between p-4 mb-4 bg-amber-500 hover:bg-amber-600 text-white rounded-lg transition-colors group">
                    <div>
                      <p class="font-semibold">Pending Work</p>
                      <p class="text-sm text-amber-100">Internal link plan — ready for review</p>
                    </div>
                    <svg class="w-5 h-5 flex-shrink-0 ml-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                    </svg>
                  </a>
                )}

                <div class="grid grid-cols-3 gap-3 mb-4 sm:hidden">
                  <div class="bg-white rounded p-2 text-center">
                    <p class="text-sm font-medium text-gray-900">{page.clicks}</p>
                    <p class="text-xs text-gray-400">clicks</p>
                  </div>
                  <div class="bg-white rounded p-2 text-center">
                    <p class="text-sm text-gray-600">{page.impressions.toLocaleString()}</p>
                    <p class="text-xs text-gray-400">impr</p>
                  </div>
                  <div class="bg-white rounded p-2 text-center">
                    <p class="text-sm text-gray-600">{page.ctrDisplay}</p>
                    <p class="text-xs text-gray-400">CTR</p>
                  </div>
                </div>

                {page.hasQueries ? (
                  <div>
                    {page.clickQueries.length >= 1 && (
                      <div class="mb-4">
                        <p class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">Driving clicks ({page.clickQueries.length})</p>
                        <div class="overflow-x-auto">
                          <table class="w-full text-sm">
                            <thead>
                              <tr class="text-xs text-gray-400 uppercase tracking-wider">
                                <th class="text-left py-1.5 pr-3">Keyword</th>
                                <th class="text-right py-1.5 px-2">Clicks</th>
                                <th class="text-right py-1.5 px-2">Impr</th>
                                <th class="text-right py-1.5 px-2 hidden sm:table-cell">CTR</th>
                                <th class="text-right py-1.5 pl-2">Pos</th>
                              </tr>
                            </thead>
                            <tbody>
                              {page.clickQueries.map(q => (
                                <tr class="border-t border-gray-200">
                                  <td class="py-1.5 pr-3 text-gray-800">{q.query}</td>
                                  <td class="py-1.5 px-2 text-right font-medium text-gray-900">{q.clicks}</td>
                                  <td class="py-1.5 px-2 text-right text-gray-500">{q.impressions.toLocaleString()}</td>
                                  <td class="py-1.5 px-2 text-right text-gray-500 hidden sm:table-cell">{q.ctr}%</td>
                                  <td class="py-1.5 pl-2 text-right">
                                    <span class={`text-xs font-medium ${posTextColor(q.position)}`}>{q.position}</span>
                                  </td>
                                </tr>
                              ))}
                            </tbody>
                          </table>
                        </div>
                      </div>
                    )}

                    {page.impressionOnlyQueries.length >= 1 && (
                      <div>
                        <button data-toggle={`pg-${page.idx}-impr`} class="flex items-center gap-1 text-xs font-semibold text-gray-400 uppercase tracking-wider mb-2 hover:text-gray-600">
                          <span>Impressions only ({page.impressionOnlyQueries.length})</span>
                          <svg class="w-3 h-3 toggle-arrow transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                          </svg>
                        </button>
                        <div id={`pg-${page.idx}-impr`} class="hidden">
                          <div class="overflow-x-auto">
                            <table class="w-full text-sm">
                              <thead>
                                <tr class="text-xs text-gray-400 uppercase tracking-wider">
                                  <th class="text-left py-1.5 pr-3">Keyword</th>
                                  <th class="text-right py-1.5 px-2">Impr</th>
                                  <th class="text-right py-1.5 pl-2">Pos</th>
                                </tr>
                              </thead>
                              <tbody>
                                {page.impressionOnlyQueries.map(q => (
                                  <tr class="border-t border-gray-200">
                                    <td class="py-1.5 pr-3 text-gray-600">{q.query}</td>
                                    <td class="py-1.5 px-2 text-right text-gray-400">{q.impressions}</td>
                                    <td class="py-1.5 pl-2 text-right">
                                      <span class={`text-xs ${posTextColor(q.position)}`}>{q.position}</span>
                                    </td>
                                  </tr>
                                ))}
                              </tbody>
                            </table>
                          </div>
                        </div>
                      </div>
                    )}
                  </div>
                ) : (
                  <p class="text-sm text-gray-400 italic">No keyword data available for this page</p>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    ) : (
      <div class="px-4 sm:px-6 py-6 text-center text-sm text-gray-400">
        No content pages ranking here yet
      </div>
    )}

    <!-- CTR context -->
    <div class="px-4 sm:px-6 py-4 bg-gray-50 border-t border-gray-100">
      <p class="text-xs text-gray-500 leading-relaxed">
        <span class="font-semibold text-gray-700">Positions 1–5 capture ~70% of all Google clicks.</span>
        Position 1 alone averages a 28% click-through rate. Position 6 drops to 3.5%, and position 10 to just 1%.
        None of your content pages rank in this zone yet — this is the target.
      </p>
    </div>
  </div>

  <!-- ============================================ -->
  <!-- PAGE 1 — BOTTOM (Positions 6-10) -->
  <!-- ============================================ -->
  <div class="bg-white rounded-lg shadow-sm overflow-hidden mb-6 border-l-4 border-amber-400">
    <div class="px-4 sm:px-6 py-4 border-b border-gray-200 bg-amber-50">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-1">
        <div class="flex items-center gap-2">
          <h3 class="text-base sm:text-lg font-semibold text-gray-900">Bottom of Page 1</h3>
          <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-amber-100 text-amber-700">{page1Bottom.length}</span>
        </div>
        <p class="text-xs text-gray-500">Positions 6–10 — low visibility, at risk of dropping to page 2</p>
      </div>
    </div>

    <div class="divide-y divide-gray-100">
      {p1BotVisibleProcessed.map(page => (
        <div>
          <button data-toggle={`pg-${page.idx}`} class="w-full text-left px-4 sm:px-6 py-3 sm:py-4 hover:bg-gray-50 transition-colors">
            <div class="flex items-center justify-between gap-2 sm:gap-4">
              <div class="flex items-center gap-2 sm:gap-3 flex-1 min-w-0">
                <span class={`inline-flex items-center px-1.5 sm:px-2 py-0.5 rounded text-xs font-bold flex-shrink-0 ${page.posColorClass}`}>
                  #{page.position.toFixed(1)}
                </span>
                <div class="min-w-0">
                  <div class="flex items-center gap-2 flex-wrap">
                    <p class="text-sm font-medium text-gray-700 truncate">{page.shortName}</p>
                    {page.isAudited && (
                      <span class="inline-flex items-center gap-1 px-1.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-700 flex-shrink-0">
                        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path></svg>
                        Audited
                      </span>
                    )}
                  </div>
                </div>
              </div>
              <div class="flex items-center gap-3 sm:gap-5 flex-shrink-0">
                <div class="text-right hidden sm:block">
                  <p class="text-sm text-gray-600">{page.clicks}</p>
                  <p class="text-xs text-gray-400">clicks</p>
                </div>
                <div class="text-right hidden sm:block">
                  <p class="text-sm text-gray-600">{page.impressions.toLocaleString()}</p>
                  <p class="text-xs text-gray-400">impr</p>
                </div>
                <div class="text-right hidden md:block">
                  <p class="text-sm text-gray-600">{page.ctrDisplay}</p>
                  <p class="text-xs text-gray-400">CTR</p>
                </div>
                <span class="text-xs text-gray-500 whitespace-nowrap">+{page.keywordCount} kw</span>
                <svg class="w-4 h-4 text-gray-400 toggle-arrow transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </div>
            </div>
          </button>

          <!-- Expanded keyword detail -->
          <div id={`pg-${page.idx}`} class="hidden border-t border-gray-100 bg-gray-50">
            <div class="px-4 sm:px-6 py-4">
              {page.isAudited && page.reportSlug && (
                <a href={`/cs/pages/${page.reportSlug}/`} class="flex items-center justify-between p-4 mb-4 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors group">
                  <div>
                    <p class="font-semibold">View Detailed Report</p>
                    <p class="text-sm text-blue-200">Full audit with keyword analysis, SERP landscape, content review, and recommendations</p>
                  </div>
                  <svg class="w-5 h-5 flex-shrink-0 ml-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                  </svg>
                </a>
              )}
              {page.workLogSlug && (
                <a href={`/cs/pages/${page.workLogSlug}/work-log/`} class="admin-only hidden flex items-center justify-between p-4 mb-4 bg-amber-500 hover:bg-amber-600 text-white rounded-lg transition-colors group">
                  <div>
                    <p class="font-semibold">Pending Work</p>
                    <p class="text-sm text-amber-100">Internal link plan — ready for review</p>
                  </div>
                  <svg class="w-5 h-5 flex-shrink-0 ml-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                  </svg>
                </a>
              )}

              <div class="grid grid-cols-3 gap-3 mb-4 sm:hidden">
                <div class="bg-white rounded p-2 text-center">
                  <p class="text-sm font-medium text-gray-900">{page.clicks}</p>
                  <p class="text-xs text-gray-400">clicks</p>
                </div>
                <div class="bg-white rounded p-2 text-center">
                  <p class="text-sm text-gray-600">{page.impressions.toLocaleString()}</p>
                  <p class="text-xs text-gray-400">impr</p>
                </div>
                <div class="bg-white rounded p-2 text-center">
                  <p class="text-sm text-gray-600">{page.ctrDisplay}</p>
                  <p class="text-xs text-gray-400">CTR</p>
