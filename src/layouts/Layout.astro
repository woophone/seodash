---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="robots" content="noindex, nofollow, noarchive, nosnippet" />
    <meta name="googlebot" content="noindex, nofollow" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50">
    <div class="min-h-screen">
      <!-- Header -->
      <header class="bg-white shadow-sm border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex justify-between items-center py-4">
            <div class="flex items-center">
              <h1 class="text-2xl font-bold text-gray-900">SEO Analysis Dashboard</h1>
            </div>
            <div class="flex items-center space-x-4">
              <span class="text-sm text-gray-600">Professional SEO Intelligence</span>
              <div class="w-8 h-8 bg-blue-600 rounded-full"></div>
            </div>
          </div>
        </div>
      </header>

      <!-- Main Content -->
      <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <slot />
      </main>
    </div>

    <script>
      // Modal open/close
      document.querySelectorAll('[data-open-modal]').forEach(btn => {
        btn.addEventListener('click', (e) => {
          if ((e.target as HTMLElement).closest('a')) return;
          const id = btn.getAttribute('data-open-modal')!;
          const target = document.getElementById('modal-' + id) || document.getElementById(id);
          target?.classList.remove('hidden');
        });
      });
      document.querySelectorAll('[data-close-modal]').forEach(el => {
        el.addEventListener('click', () => {
          (el as HTMLElement).closest('.fixed')?.classList.add('hidden');
        });
      });
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') {
          document.querySelectorAll('.fixed:not(.hidden)').forEach(m => m.classList.add('hidden'));
        }
      });

      // Admin mode: ?user=admin
      const params = new URLSearchParams(window.location.search);
      if (params.get('user') === 'admin') {
        document.querySelectorAll('.admin-only').forEach(el => el.classList.remove('hidden'));
        // Propagate ?user=admin to all internal links
        document.querySelectorAll('a[href^="/"], a.admin-link').forEach(a => {
          const href = a.getAttribute('href');
          if (href && !href.includes('user=admin')) {
            const sep = href.includes('?') ? '&' : '?';
            a.setAttribute('href', href + sep + 'user=admin');
          }
        });
      }

      // Collapsible sections
      document.querySelectorAll('[data-toggle]').forEach(btn => {
        btn.addEventListener('click', () => {
          const target = document.getElementById(btn.getAttribute('data-toggle')!);
          if (target) {
            target.classList.toggle('hidden');
            const arrow = btn.querySelector('.toggle-arrow');
            if (arrow) arrow.classList.toggle('rotate-180');
          }
        });
      });
    </script>
  </body>
</html>

<style is:global>
  html {
    font-family: system-ui, sans-serif;
  }
</style>
